<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
        logicalFilePath="changelog-2.0-clean">

    <changeSet author="sgpublic - sgpublic2002@gmail.com" id="changelog-2.0-clean">
        <createTable tableName="driveindex_users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="username" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="pwd_hash" type="text">
                <constraints nullable="false" />
            </column>
            <column name="pwd_salt" type="text">
                <constraints nullable="false" />
            </column>
            <column name="enable" type="boolean" defaultValue="1">
                <constraints nullable="false" />
            </column>
            <column name="role" type="varchar(16)">
                <constraints nullable="false" />
            </column>
            <column name="permission" type="int(32)">
                <constraints nullable="false" />
            </column>
            <column name="nick" type="varchar(32)" defaultValue="">
                <constraints nullable="false" />
            </column>
            <column name="create_at" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="modify_at" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="longtext(2000)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>